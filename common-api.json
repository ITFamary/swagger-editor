{
  "swagger": "2.0-with-api-mocker-1.0",
  "info": {
    "title": "项目管理",
    "version": "1.0.0-SNAPSHOT",
    "id": "common-solution-manager",
    "branch": "master"
  },
  "paths": {
    "/login": {
      "post": {
        "summary": "执行登录",
        "description":
          "登录完成之后应该获取跟loginStatus一样的响应；mock时用户名为error就登录失败",
        "tags": ["login"],
        "consumes": [
          "application/x-www-form-urlencoded",
          "multipart/form-data"
        ],
        "parameters": [
          {
            "name": "username",
            "in": "formData",
            "type": "string",
            "required": true
          },
          {
            "name": "password",
            "in": "formData",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "cookies": {
              "name": {
                "type": "string",
                "default": {
                  "__script": "username"
                }
              }
            },
            "schema": {
              "$ref": "#/definitions/LoginStatus",
              "properties": {
                "loginName": {
                  "default": {
                    "__script": "username"
                  }
                }
              }
            }
          },
          "410": {
            "description": "无效的登录",
            "condition": {
              "script": "username==='error'"
            }
          }
        }
      }
    },
    "/loginStatus": {
      "get": {
        "summary": "获取登录状态",
        "description": "包含权限信息",
        "tags": ["login"],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/LoginStatus",
              "properties": {
                "loginName": {
                  "default": {
                    "__script": "__request.cookies.name"
                  }
                }
              }
            }
          },
          "302": {
            "description": "无效的登录",
            "condition": {
              "script": "!__request.cookies.name"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "ProjectAuthority": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "description": "项目id"
        },
        "write": {
          "type": "boolean",
          "description": "是否可以写入"
        },
        "read": {
          "type": "boolean",
          "description": "是否可以读取"
        }
      }
    },
    "LoginStatus": {
      "type": "object",
      "properties": {
        "loginName": {
          "type": "string",
          "description": "登录名"
        },
        "projectAuthorities": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ProjectAuthority"
          }
        }
      },
      "required": ["loginName"]
    }
  }
}
